(function() {
  if("<%= @likeable.class %>" === "Comment") {

    var newLikeSection = "<%= j(render 'posts/comment_like', comment: @likeable) %>"
    var $newLikeSection = $(newLikeSection)
    var $oldLikeSection = $('article[data-comment-id="<%= @likeable.id %>"]').find(".likesection");
    $oldLikeSection.replaceWith($newLikeSection)

  } else if("<%= @likeable.class %>" === "Post")
    var newLikeSection = "<%= j(render 'posts/post_like', post: @likeable) %>"


    var $newLikeSection = $(newLikeSection)
    var $oldLikeSection = $('div[data-post-id="<%= @likeable.id %>"]').find(".likesection").first();
    $oldLikeSection.replaceWith($newLikeSection)
})();


