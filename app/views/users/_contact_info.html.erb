<h3>Contact Information</h3>

<div class="row">
  <div class="col-xs-3">
    <%= user_fields.label :email, class: "control-label" %>
  </div>

  <div class="col-xs-6">
    <%= user_fields.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-xs-3">
    <%= profile_fields.label :phone, "Telephone", class: "control-label" %>
  </div>

  <div class="col-xs-6">
     <%= profile_fields.telephone_field :phone, class: "form-control" %>
  </div>
</div>