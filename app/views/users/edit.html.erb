<%= render 'shared/cover' %>

<%= render 'shared/subnav' %>



  <section  class="content col-xs-10 col-xs-offset-1">
    <h2>Edit Profile</h2>

    <div class="row">
    <div class="col-xs-offset-4">
      <%= link_to "Edit Cover Photo", user_cover_photo_path(current_user.id), class: "btn btn-primary " %>
      <%= link_to "Edit Profile Picture", user_profile_photo_path(current_user.id), class: "btn btn-warning " %>
    </div>
    </div>
      <%= form_for @user, url: { action: "update", controller: "users" },  html: { class: "form-horizontal" } do |user_fields| %>

        <div class="col-xs-12 col-sm-5 col-sm-offset-1 col-xs-offset-1">
          <h3>Basic Information</h3>

          <div class="form-group">
            <div class="col-xs-3">

              <%= user_fields.label :birthday, class: "control-label" %>
            </div>

            <div class="col-xs-8">
              <%= user_fields.date_field :birthday, class: "form-control" %>
            </div>
          </div>
          <%= user_fields.fields_for :profile do |profile_fields| %>
            <%= render 'basic_info', profile_fields: profile_fields %>
            <%= render 'contact_info', profile_fields: profile_fields, user_fields: user_fields %>

          </div>

          <div class="col-xs-10  col-sm-5 ">
            <%= render 'about_me_info', profile_fields: profile_fields %>
          </div>

          <% end %>
        <div class="row">

          <div class="col-xs-2 col-xs-offset-5">
            <%= user_fields.submit class: "btn btn-success" %>
          </div>

        </div>
      </div>
    <% end %>
  </section>


<%= render 'shared/footer' %>
