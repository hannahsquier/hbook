<% if params[:user_id] %>
  <% user_id = params[:user_id] %>
<% else %>
   <% user_id = params[:id] %>
<% end %>

<div class="row">
   <div class=" col-xs-12 sub-nav">
    <div class="col-xs-offset-7 col-sm-offset-5 col-lg-offset-3 col-xs-6 col-sm-8 col-lg-9">
      <ul class="nav nav-pills">
        <li
          <% if params[:action] == 'timeline' %>
            class="active"
          <% end %>
        >
           <%= link_to 'Timeline', user_posts_path(current_page_user_id) %>
        </li>

        <li
          <% if params[:action] == 'about' %>
            class="active"
          <% end %>
          >
           <%= link_to 'About', user_path(current_page_user_id) %>

        </li>

        <li
         <% if params[:action] == 'photos' %>
            class="photos"
          <% end %>
        >
          <%= link_to 'Photos <span class="badge">1310</span>'.html_safe, photos_path %>

        </li>

        <li
         <% if params[:action] == 'friends' %>
            class="friends"
          <% end %>
          >
          <%= link_to 'Friends <span class="badge">310</span>'.html_safe, user_friendings_path(current_page_user_id) %>

        </li>

    </div>
  </ul>
</div>